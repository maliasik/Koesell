@model Koesell.Models.Register


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Üye Ol</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        Kullanıcı Adı: @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        Adı: @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        Soyadı: @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        Cep Telefonu: @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        Şifre: @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        Şifre(Tekrar): @Html.PasswordFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-10">
                                        E-Posta: @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-success">Kayıt Ol</button>
                                </div>
                            </div>
                    }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section>

