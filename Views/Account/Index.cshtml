@using Koesell.Models
@model IEnumerable<UserOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td>Sipariş Numarası</td>
                        <td>Sipariş Tarihi</td>
                        <td>Toplam Tutar (₺)</td>
                        <td>Sipariş Durumu</td>

                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate</td>
                        <td>@item.Total</td>
                        <td>@item.OrderState</td>
                        <td>@Html.ActionLink("Sipariş Detay", "Details",new { id = @item.Id }, new { @class="btn btn-primary"})</td>

                    </tr>

                    }
                </tbody>
            </table>
        </div>
   
</div>

