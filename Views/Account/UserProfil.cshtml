@model Koesell.Models.UserProfile
@{
    ViewBag.Title = "UserProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-1">

    </div>
    <div class="col-sm-4">
        <div class="signup-form">
            <!--sign up form-->
            <h2>Profil Bilgileri</h2>
            @using (Html.BeginForm("UserProfil", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <h3>Bilgilerinizi Güncelleyebilirsiniz.</h3>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id)

                <div class="control-group">
                    <div class="controls">
                        <div class="col-md-10">
                            Kullanıcı Adı: @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="col-md-10">
                            Adı: @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="col-md-10">
                            Soyadı: @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="col-md-10">
                            Cep Telefonu: @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="col-md-10">
                            E-Posta: @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-success">Güncelle</button>
                        <a href="/Account/ChangePassword">Şifre Değiştir</a>
                    </div>
                </div>
            }
        </div><!--/sign up form-->
    </div>
</div>

