@model Koesell.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Giriş Yap</h2>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="control-group">
                            <div class="controls">
                                <div class="col-md-10">
                                    Kullanıcı Adı: @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <div class="col-md-10">
                                    Şifre: @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100%" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <button type="submit" class="btn btn-success">Giriş</button>
                            </div>
                        </div>
                    }
                </div><!--/login form-->
             </div>
         </div>
    </div>
</section>

